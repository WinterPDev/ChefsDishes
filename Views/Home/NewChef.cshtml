@model Chef



<div class="text-center">
    <div class="container">
        <div class="row">
            <div class="col-sm">

            </div>
            <div class="col-sm">
                <h1>Add a Chef</h1>
            </div>
            <div class="col-sm">
                <a type="button" class="btn btn-primary float-right" href="/">Home</a>
            </div>
        </div>
    </div>
    <div class="d-flexin">
        <form action="CreateChef" method="post">
            <div class="form-group row">
                <label for="FirstName">First Name :</label>
                <input asp-for="FirstName" class="ml-2">
            <span class=" ml-2 text-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group row">
                <label for="LastName">First Name :</label>
                <input asp-for="LastName" class="ml-2">
            <span class=" ml-2 text-danger" asp-validation-for="LastName"></span>
            </div>
            <div class="form-group row">
                <label for="DoB">Date of Birth :</label>
                <input type="date" name="DoB" required>
            <span class=" ml-2 text-danger" asp-validation-for="Age"></span>
            </div>

            <div class="form-group row">
                <input type="submit" value="Submit" class="btn btn-info">
            </div>

        </form>
    </div>

</div>