@model Dish

<div class="text-center">
    <h3>Add Your Dish</h3>
    <div class="d-flexin">
        <form action="addDish" method="post">
            <div class="form-group row">
                <label for="Name">Dish Name :</label>
                <input asp-for="Name" class="ml-2">
            <span class=" ml-2 text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="form-group row">
                <label for="ChefId">Chef Name : </label>
                
                <select asp-for="ChefId">
                    @{
                        foreach(Chef c in ViewBag.allChefs)
                        {
                            <option value="@c.ChefId">@c.FirstName @c.LastName</option>
                        }
                    }
                </select>

            </div>

            <div class="form-group row">
                <label for="Calories">Calories : </label>
                <input asp-for="Calories" class="ml-2">
                <span class=" ml-2 text-danger" asp-validation-for="Calories"></span>
            </div>
            <div class="form-group row">
                <label for="Tastiness">Tastiness : </label>
                <select asp-for="Tastiness" class="ml-2">
                    <option hidden selected disabled>--Select Rating--</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span class=" ml-2 text-danger" asp-validation-for="Tastiness"></span>
            </div>
            <div class="form-group row">
                <label for="Description">Description : </label>
                <textarea asp-for="Description" class="ml-2"></textarea>
                <span class=" ml-2 text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group row">
                <input type="submit" value="Submit" class="btn btn-info">
            </div>

        </form>
    </div>

</div>